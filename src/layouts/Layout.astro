---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link
      rel="icon"
      type="image/svg+xml"
      href="/favicon.ico"
      className:"bg-transparent"
    />

    <meta name="generator" content={Astro.generator} />
    <meta name="description" content="Reimagining debt solutions for India" />
    <title>{title}</title>
  </head>
  <body>
    <slot />
    <style is:global>
      html {
        font-family: Red Hat Display;
        background-color: #ffffff;
        overflow-x: hidden;
        scroll-behavior: smooth;
      }
    </style>
    <!-- Google tag (gtag.js) -->
    <script
      type="application/javascript"
      async
      src="https://www.googletagmanager.com/gtag/js?id=G-7RPDBKP8JV"
    ></script>
    <script type="application/javascript">
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());

      gtag("config", "G-7RPDBKP8JV");
    </script>
  </body>
</html>
